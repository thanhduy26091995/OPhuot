<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_support_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/img_support_more"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Bùi Vũ Thanh Duy"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:id="@+id/img_support_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_more_vert_black_24dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_support_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="5"
                android:text="0123556"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/txt_support_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="5"
                android:text="0123556" />


            <TextView
                android:id="@+id/txt_support_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="5"
                android:text="Tiếp đón Anderlecht trên sân nhà, HLV Jose Mourinho thực hiện khá nhiều sự thay đổi ở đội hình MU so với trận thắng 2-0 trước Chelsea ở Premier League. Đáng chú ý là sự trở lại của tiền đạo Zlatan Ibrhaimovic ở vị trí cao nhất trên hàng công." />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>